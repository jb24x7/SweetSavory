@{
  Layout = "_Layout";
}

@using SweetTreat.Models;

<div class="view-header"><h2>Flavors</h2></div>

<div class="view-body index">
  @if (@Model.Count == 0)
  {
    <h3>No Flavors have been added yet!</h3>
  }
  else
  {
    <ul class="capsule-list">
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Taste}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>
  }
</div>

<div class="button-footer">
  <hr />
  <a href='@Url.Action("Create")'>
    <button class="green">Create new Flavor</button>
  </a>
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
</div>