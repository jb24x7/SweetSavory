@{
  Layout = "_Layout";
}

@model SweetTreat.Models.Flavor

<h2>Edit</h2>

<h4>Edit this flavor: @Html.DisplayFor(model => model.Taste) @Html.DisplayFor(model => model.LastName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.LabelFor(model => model.Taste)
  @Html.EditorFor(model => model.Taste)

  @Html.LabelFor(model => model.LastName)
  @Html.EditorFor(model => model.LastName)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>