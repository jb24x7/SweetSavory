@{
  Layout = "_Layout";
}

@using SweetTreat.Models;

<div class="view-header"><h2>Treats</h2></div>

<div class="view-body index">
  @if (@Model.Count == 0)
  {
    <h3>No Treats have been added yet!</h3>
  }
  else
  {
    <ul class="capsule-list treat-list">
    @foreach (Treat treat in Model)
    {
      <a href='@Url.Action("Details", new { id = treat.TreatId })'>
        <li>
          <div class="icon"></div>
          <div class="bold">@treat.Title</div>
        </li>
      </a>
    }
    </ul>
  }
</div>

<div class="button-footer">
  @if(!User.IsInRole("Admin")){
      <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  } else {
  <a href='@Url.Action("Create")'>
    <button class="green">Create new Treat</button>
  </a>
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  }

</div>
<hr />